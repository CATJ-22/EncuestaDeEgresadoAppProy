<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom">

    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        >

        <ImageView
            android:background="@drawable/iconoencuestas"
            android:layout_width="60dp"
            android:layout_height="60dp"/>

        <TextView
            android:id="@+id/txtNombreEncuesta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="Nombre_Encuesta"
            />
        <TextView
            android:layout_marginTop="90dp"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enviar encuesta"
            />
        <LinearLayout
            android:layout_marginTop="90dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <Button
                android:background="@drawable/diseno_boton_mainactivity"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:text="Masivo"
                android:textColor="@color/colorWhite"
                android:layout_marginRight="15dp"
                />
            <Button
                android:background="@drawable/diseno_boton_mainactivity"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:text="Individual"
                android:textColor="@color/colorWhite"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="140dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@color/colorGreen"
        android:gravity="center"
        >
        <ImageButton
            android:id="@+id/imgbCalendario"
            android:background="@drawable/iconocalendario"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="40dp"
            />
        <ImageButton
            android:id="@+id/imgbEstadistica"
            android:background="@drawable/iconograficos"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            />
        <ImageButton
            android:id="@+id/imgbNotificacion"
            android:background="@drawable/icononotificacion"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="40dp"
            />

    </LinearLayout>

</LinearLayout>